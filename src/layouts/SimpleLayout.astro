---
import "../styles/global.css";
import HeaderSimple from "../components/HeaderSimple.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "SAÉ 303 - Analyse comparative des dynamiques culturelles entre Bordeaux et Montpellier",
} = Astro.props;
---

<!doctype html>
<html lang="fr" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | SAÉ 303</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#F2F2F2]">
    <HeaderSimple />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
